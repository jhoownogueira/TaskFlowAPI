generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks         Task[]
  refreshTokens RefreshToken[]
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
}

model RefreshToken {
  id        String    @id @default(uuid())
  tokenHash String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
}

enum TaskStatus {
  TODO
  DOING
  DONE
}
